<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LANCommander.Launcher.Avalonia.ViewModels"
             xmlns:vmComponents="using:LANCommander.Launcher.Avalonia.ViewModels.Components"
             xmlns:views="using:LANCommander.Launcher.Avalonia.Views"
             xmlns:components="using:LANCommander.Launcher.Avalonia.Views.Components"
             x:Class="LANCommander.Launcher.Avalonia.Views.ShellView"
             x:DataType="vm:ShellViewModel">
    
    <Grid RowDefinitions="*,Auto">
        <Grid Grid.Row="0" ColumnDefinitions="280,*">
            <!-- Left Sidebar -->
            <components:LibrarySidebarView Grid.Column="0" DataContext="{Binding Sidebar}" />
            
            <!-- Main Content Area -->
            <Border Grid.Column="1">
                <ContentControl Content="{Binding ContentView}">
                    <ContentControl.DataTemplates>
                        <DataTemplate DataType="vm:GamesListViewModel">
                            <views:GamesListView />
                        </DataTemplate>
                        <DataTemplate DataType="vm:GameDetailViewModel">
                            <views:GameDetailView />
                        </DataTemplate>
                        <DataTemplate DataType="vm:SettingsViewModel">
                            <views:SettingsView />
                        </DataTemplate>
                    </ContentControl.DataTemplates>
                </ContentControl>
            </Border>
        </Grid>
        
        <!-- Download Queue Panel (bottom) -->
        <views:DownloadQueueView Grid.Row="1" DataContext="{Binding DownloadQueue}" />
    </Grid>
</UserControl>
