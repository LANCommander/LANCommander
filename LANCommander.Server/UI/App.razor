@code {
    protected override async Task OnInitializedAsync()
    {
        if (DatabaseContext.Provider == DatabaseProvider.Unknown && !NavigationManager.Uri.Contains("/FirstTimeSetup"))
        {
            NavigationManager.NavigateTo("/FirstTimeSetup", true);
        }
    }
}